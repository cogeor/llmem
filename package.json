{
  "name": "llmem",
  "displayName": "LLMem - LLM Artifact Manager",
  "description": "MCP server extension for generating and managing LLM artifacts",
  "version": "0.1.0",
  "publisher": "llmem",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "llmem.showStatus",
        "title": "LLMem: Show Status"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "node --test dist/**/*.test.js",
    "verify": "node dist/test/verify_mcp.js && node dist/test/verify_strategy.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "tree-sitter": "^0.25.0",
    "tree-sitter-cli": "^0.25.10",
    "tree-sitter-javascript": "^0.25.0",
    "tree-sitter-python": "^0.25.0",
    "tree-sitter-typescript": "^0.23.2",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.4"
  }
}